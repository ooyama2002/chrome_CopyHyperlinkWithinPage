{
    "manifest_version": 3,
    "name": "CopyHyperlinkWithinPage",
    "version": "1.0.0",
    "description": "Copy a hyperlink within a page",
    "homepage_url": "https://github.com/ooyama2002/chrome_CopyHyperlinkWithinPage/",
    "icons": {
        "32": "icon-32.png",
        "48": "icon-48.png",
        "64": "icon-64.png",
        "128": "icon-128.png"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "clipboardWrite",
        "contextMenus"
    ],
    "background": {
        "service_worker": "background.js"
    }
}